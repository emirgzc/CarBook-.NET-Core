@model List<ResultBrandDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="row">

	<div class="col-xl-12">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Marka Listesi</h4>
				<p class="card-subtitle mb-4">
					Markalar ile ilgili yeni ekleme, listeleme, markalar üzerinde düzenleme ve bir markayı kaldırma işlemini buradan gerçekleştirebilirsiniz.
				</p>
				<div class="table-responsive">
					<table class="table mb-0">
						<thead>
							<tr>
								<th>#</th>
								<th>Özellik</th>
								<th>Sil</th>
								<th>Güncelle</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								count++;
								<tr>
									<th scope="row">@count</th>
									<td>@item.BrandName</td>
									<td><a href="/AdminBrand/RemoveBrand/@item.BrandID" class="btn btn-outline-danger">Sil</a></td>
									<td><a href="/AdminBrand/UpdateBrand/@item.BrandID" class="btn btn-outline-warning">Güncelle</a></td>
								</tr>
							}
						</tbody>
					</table>
					<a href="/AdminBrand/CreateBrand/" class="btn btn-outline-success">Yeni Marka Ekle</a>
				</div>

			</div>
			<!-- end Brandd-body-->
		</div>
		<!-- end Brandd -->

	</div>

</div>

