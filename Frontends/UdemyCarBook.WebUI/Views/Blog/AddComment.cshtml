

<div class="comment-form-wrap pt-5">
	<h3 class="mb-5">Bir Yorum Yapın</h3>
	<form method ="post" asp-controller="Blog" asp-action="AddComment" class="p-5 bg-light">
		<input type="text" readonly name="BlogID" value="@ViewBag.blogId" class="form-control" />
		<div class="form-group">
			<label for="name">Ad Soyad *</label>
			<input type="text" name="Name" class="form-control" id="name">
		</div>
		<div class="form-group">
			<label for="name">Mail Adresi *</label>
			<input type="text" name="Email" class="form-control" id="name">
		</div>
		<div class="form-group">
			<label for="message">Yorumunuz</label>
			<textarea name="Content" id="message" cols="30" rows="10" class="form-control"></textarea>
		</div>
		<div class="form-group">
			<input type="submit" value="Yorum Yap" class="btn py-3 px-4 btn-primary">
		</div>

	</form>
</div>