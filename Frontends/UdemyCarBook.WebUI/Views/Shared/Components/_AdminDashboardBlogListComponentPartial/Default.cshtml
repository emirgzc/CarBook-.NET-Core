@model List<ResultAllBlogsWithAuthorDto>
@{
	int count = 0;
}

<div class="col-xl-6">
	<div class="card">
		<div class="card-body">

			<h4 class="card-title">Son Bloglar</h4>
			<p class="card-subtitle mb-4 font-size-13">
				Yazarlarımızın son 5 blog listesi aşağıda listelenmektedir.
			</p>

			<div class="table-responsive">
				<table class="table table-borderless table-hover table-centered table-nowrap mb-0">
					<tbody>

						@foreach (var item in Model)
						{
							count++;
							<tr>
								<td>
									<strong>
										@count
									</strong>
								</td>
								<td>
									<h5 class="font-size-15 mb-1 font-weight-normal">
										@item.title
									</h5>
									<span class="text-muted font-size-12">@item.authorName</span>
								</td>
								<td>
									<h5 class="font-size-15 mb-1 font-weight-normal">@item.categoryName</h5>
									<span class="text-muted font-size-12">@item.createdDate.ToLongDateString()</span>
								</td>
								<td>
									<h5 class="font-size-15 mb-1 font-weight-normal">
										<a href="/Blog/BlogDetail/@item.blogID" class="btn btn-primary">Bloğu Aç</a>
									</h5>
								</td>
							</tr>
						}

					</tbody>
				</table>
			</div>

		</div> <!-- end card-body-->
	</div> <!-- end card-->
</div> <!-- end col -->