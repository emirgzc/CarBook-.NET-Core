@model List<ResultCarWithBrandsDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="row">

    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Araba Listesi</h4>
                <p class="card-subtitle mb-4">
                    Arabalar ile ilgili ekleme, silme, güncelleme, arama ve listeleme işlemleri bu sayfa üzerinden gerçekleştirilmektedir.
                </p>
                <div class="table-responsive">
                    <table class="table mb-0">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Resim</th>
                                <th>Marka</th>
                                <th>Model</th>
                                <th>Vites</th>
                                <th>Km</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                                <th>Detaylar</th>
                                <th>Özellik Ata</th>
                                <th>Sitede Gör</th>
                                <th>Fiyat Bilgileri</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td><img src="@item.CoverImageUrl" height="45"/></td>
                                    <td>@item.BrandName</td>
                                    <td>@item.Model</td>
                                    <td>@item.Transmission</td>
                                    <td>@item.Km</td>
                                    <td><a href="/AdminCar/RemoveCar/@item.CarID" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/AdminCar/UpdateCar/@item.CarID" class="btn btn-outline-warning">Güncelle</a></td>
                                    <td><a href="/Admin/AdminCarFeatureDetail/Index/@item.CarID" class="btn btn-outline-primary">Detaylar</a></td>
                                    <td><a href="/Admin/AdminCarFeatureDetail/CreateFeatureByCarId/@item.CarID" class="btn btn-outline-dark">Özellik Ata</a></td>
                                    <td><a href="/AdminCar/CarDetail/@item.CarID" class="btn btn-outline-secondary">Sitede Gör</a></td>
                                    <td><a href="/AdminCar/CarDetail/@item.CarID" class="btn btn-outline-info">Fiyat Bilgileri</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/AdminCar/CreateCar/" class="btn btn-outline-success">Yeni Araç Ekle</a>
                </div>

            </div>
            <!-- end card-body-->
        </div>
        <!-- end card -->

    </div>
    
</div>

