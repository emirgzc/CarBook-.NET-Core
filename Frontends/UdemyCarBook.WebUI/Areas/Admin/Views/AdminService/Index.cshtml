@model List<ResultServiceDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="row">

	<div class="col-xl-12">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Hizmetler Alanı</h4>
				<p class="card-subtitle mb-4">
					Hizmetler alanında bulunan bilgileri aşağıdan düzenleyebilirsiniz.
				</p>
				<div class="table-responsive">
					<table class="table mb-0">
						<thead>
							<tr>
								<th>#</th>
								<th>Başlık</th>
								<th>Açıklama</th>
								<th>İkon Url</th>
								<th>Sil</th>
								<th>Güncelle</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								count++;
								<tr>
									<th>@count</th>
									<td>@item.Title</td>
									<td>@item.Description</td>
									<td>@item.IconUrl</td>
									<td><a href="/Admin/AdminService/RemoveService/@item.ServiceID" class="btn btn-outline-danger">Sil</a></td>
									<td><a href="/Admin/AdminService/UpdateService/@item.ServiceID" class="btn btn-outline-warning">Güncelle</a></td>
								</tr>
							}
						</tbody>
					</table>
					<a href="/Admin/AdminService/CreateService/" class="btn btn-outline-success">Yeni Hizmet Ekle</a>
				</div>

			</div>
			<!-- end Serviced-body-->
		</div>
		<!-- end Serviced -->

	</div>

</div>