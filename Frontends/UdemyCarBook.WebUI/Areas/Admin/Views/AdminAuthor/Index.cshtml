@model List<ResultAuthorDto>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">

	<div class="col-xl-12">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Yazar Alanı</h4>
				<p class="card-subtitle mb-4">
					Yazar alanında bulunan bilgileri aşağıdan düzenleyebilirsiniz.
				</p>
				<div class="table-responsive">
					<table class="table mb-0">
						<thead>
							<tr>
								<th>#</th>
								<th>Ad Soyad</th>
								<th>Yazar Resim Url</th>
								<th>Sil</th>
								<th>Güncelle</th>
								<th>Yazarın Blogları</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<th>#</th>
									<td><img src="@item.ImageUrl" width="50" height="50" style="margin-right:10px;" />@item.Name</td>
									<td>@item.ImageUrl</td>
									<td><a href="/Admin/AdminAuthor/RemoveAuthor/@item.AuthorID" class="btn btn-outline-danger">Sil</a></td>
									<td><a href="/Admin/AdminAuthor/UpdateAuthor/@item.AuthorID" class="btn btn-outline-warning">Güncelle</a></td>
									<td><a href="#" class="btn btn-outline-success">Yazarın Blogları</a></td>
								</tr>
							}
						</tbody>
					</table>
					<a href="/Admin/AdminAuthor/CreateAuthor/" class="btn btn-outline-success">Yeni Yazar Ekle</a>
				</div>

			</div>
			<!-- end Authord-body-->
		</div>
		<!-- end Authord -->

	</div>

</div>