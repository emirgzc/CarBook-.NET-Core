@model CreateAuthorDto

@{
    ViewData["Title"] = "CreateAuthor";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">
	<div class="col-xl-12">
		<div class="card">
			<div class="card-body">

				<h4 class="card-title">Yeni Yazar Ekleme</h4>
				<p class="card-subtitle mb-4">Yazar ile ilgili temel bilgileri eksiksiz doldurmanız önemlidir. Veri girişlerinden sonra kaydet butonuna tıklayınız.</p>

				<form method="post">
					<div class="form-group">
						<label for="exampleInputPassword1">Yazar Adı Soyadı</label>
						<input type="text" class="form-control" asp-for="Name" id="exampleInputPassword1" placeholder="Yazar Adı Soyadı girişi yapınız">
					</div>
					<div class="form-group">
						<label for="exampleInputPassword1">Yazar Açıklama</label>
						<textarea class="form-control" rows="5" asp-for="Description" placeholder="Yazar girişi yapınız"></textarea>
					</div>
					<div class="form-group">
						<label for="exampleInputPassword1">Yazar Resim Url</label>
						<input type="text" class="form-control" asp-for="ImageUrl" id="exampleInputPassword1" placeholder="Yazar Resim Url girişi yapınız">
					</div>
					<button type="submit" class="btn btn-primary waves-effect waves-light">Yazarı Kaydet</button>
				</form>

			</div> <!-- end card-body-->
		</div>
	</div>
</div>

