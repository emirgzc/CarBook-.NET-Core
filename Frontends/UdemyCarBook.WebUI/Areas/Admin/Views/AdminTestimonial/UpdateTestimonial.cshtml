
@model UpdateTestimonialDto

@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="row">
	<div class="col-xl-12">
		<div class="card">
			<div class="card-body">

				<h4 class="card-title">Referans Güncelleme</h4>
				<p class="card-subtitle mb-4">Referans ile ilgili temel bilgileri eksiksiz doldurmanız önemlidir. Veri girişlerinden sonra güncelle butonuna tıklayınız.</p>

				<form method="post">
					<input type="hidden" asp-for="TestimonialID" />
					<div class="form-group">
						<label for="exampleInputPassword1">Referans Ad Soyad</label>
						<input type="text" class="form-control" asp-for="Name" id="exampleInputPassword1" placeholder="Referans Ad Soyad girişi yapınız">
					</div>
					<div class="form-group">
						<label for="exampleInputPassword1">Referans Başlık</label>
						<input type="text" class="form-control" asp-for="Title" id="exampleInputPassword1" placeholder="Referans Başlık girişi yapınız">
					</div>
					<div class="form-group">
						<label for="exampleInputPassword1">Referans Mesaj</label>
						<textarea class="form-control" rows="5" asp-for="Comment" placeholder="Referans Mesaj girişi yapınız"></textarea>
					</div>
					<div class="form-group">
						<label for="exampleInputPassword1">Referans Resim</label>
						<input type="text" class="form-control" asp-for="ImageUrl" id="exampleInputPassword1" placeholder="Referans Resim girişi yapınız">
					</div>
					<button type="submit" class="btn btn-primary waves-effect waves-light">Referansı Güncelle</button>
				</form>

			</div> <!-- end card-body-->
		</div>
	</div>
</div>

