@model List<ResultTestimonailDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}


<div class="row">
	<div class="col-xl-12">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Referanslar Alanı</h4>
				<p class="card-subtitle mb-4">
					Referanslar alanında bulunan bilgileri aşağıdan düzenleyebilirsiniz.
				</p>
				<div class="table-responsive">
					<table class="table mb-0">
						<thead>
							<tr>
								<th>#</th>
								<th>Ad Soyad</th>
								<th>Başlık</th>
								<th>Mesaj</th>
								<th>Sil</th>
								<th>Güncelle</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								count++;
								<tr>
									<th>@count</th>
									<td><img src="@item.ImageUrl" width="50" height="50" style="margin-right:10px;" />@item.Name</td>
									<td>@item.Title</td>
									<td>@item.Comment</td>
									<td><a href="/Admin/AdminTestimonial/RemoveTestimonial/@item.TestimonialID" class="btn btn-outline-danger">Sil</a></td>
									<td><a href="/Admin/AdminTestimonial/UpdateTestimonial/@item.TestimonialID" class="btn btn-outline-warning">Güncelle</a></td>
								</tr>
							}
						</tbody>
					</table>
					<a href="/Admin/AdminTestimonial/CreateTestimonial/" class="btn btn-outline-success">Yeni Referans Ekle</a>
				</div>

			</div>
			<!-- end Testimoniald-body-->
		</div>
		<!-- end Testimoniald -->

	</div>

</div>