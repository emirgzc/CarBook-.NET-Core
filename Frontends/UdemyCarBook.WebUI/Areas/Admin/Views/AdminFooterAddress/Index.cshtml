@model List<ResultFooterAddressDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">

	<div class="col-xl-12">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">İletişim ve Footer Adres Alanı</h4>
				<p class="card-subtitle mb-4">
					İletişim ve Footer Adres alanında bulunan bilgileri aşağıdan düzenleyebilirsiniz.
				</p>
				<div class="table-responsive">
					<table class="table mb-0">
						<thead>
							<tr>
								<th>#</th>
								<th>Adres</th>
								<th>Telefon</th>
								<th>Email</th>
								<th>Açıklama</th>
								<th>Güncelle</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<th>#</th>
									<td>@item.Address</td>
									<td>@item.Phone</td>
									<td>@item.Email</td>
									<td>@item.Description</td>
									<td><a href="/Admin/AdminFooterAddress/UpdateFooterAddress/@item.FooterAddressID" class="btn btn-outline-warning">Güncelle</a></td>
								</tr>
							}
						</tbody>
					</table>
				</div>

			</div>
			<!-- end FooterAddressd-body-->
		</div>
		<!-- end FooterAddressd -->

	</div>

</div>



