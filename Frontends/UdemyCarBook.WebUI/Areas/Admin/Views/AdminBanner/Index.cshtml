@model List<ResultBannerDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">

	<div class="col-xl-12">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Ana Sayfa Banner Alanı</h4>
				<p class="card-subtitle mb-4">
					Ana sayfanın banner alanında bulunan bilgileri aşağıdan düzenleyebilirsiniz.
				</p>
				<div class="table-responsive">
					<table class="table mb-0">
						<thead>
							<tr>
								<th>#</th>
								<th>Başlık</th>
								<th>Açıklama</th>
								<th>Video Url</th>
								<th>Video Açıklama</th>
								<th>Güncelle</th>
								<th>Videoyu Aç</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<th>#</th>
									<td>@item.Title</td>
									<td>@item.Description</td>
									<td>@item.VideoUrl</td>
									<td>@item.VideoDescription</td>
									<td><a href="/Admin/AdminBanner/UpdateBanner/@item.BannerID" class="btn btn-outline-warning">Güncelle</a></td>
									<td><a href="/Admin/AdminBanner/UpdateBanner/@item.BannerID" class="btn btn-outline-info">Videoyu Aç</a></td>
								</tr>
							}
						</tbody>
					</table>
				</div>

			</div>
			<!-- end Bannerd-body-->
		</div>
		<!-- end Bannerd -->

	</div>

</div>



