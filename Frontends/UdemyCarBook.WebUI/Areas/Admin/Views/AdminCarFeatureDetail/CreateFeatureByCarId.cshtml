@model CreateCarFeatureDto

@{
    ViewData["Title"] = "CreateFeatureByCarId";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">

	<div class="col-xl-12">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Araca Ait Özellik Ekleme Alanı</h4>
				<p class="card-subtitle mb-4">
					Araca Ait Özellik Ekleme alanında bulunan bilgileri aşağıdan düzenleyebilirsiniz.
				</p>

				<form method="post">
					<input type="hidden" value="@ViewBag.carId" asp-for="CarID"/>
					@for (int i = 0; i < Model.Features.Count; i++)
					{
						<div class="form-check">
							<input type="hidden" asp-for="@Model.Features[i].FeatureID" />
							<input type="hidden" asp-for="@Model.Features[i].Name" />
							<input type="checkbox" class="form-check-input" asp-for="@Model.Features[i].Status" />
							<label class="form-check-label">@Model.Features[i].Name</label>
						</div>
					}
					<br />
					<button class="btn btn-primary">Araca Özellikleri Ata</button>
				</form>

			</div>
			<!-- end Categoryd-body-->
		</div>
		<!-- end Categoryd -->

	</div>

</div>