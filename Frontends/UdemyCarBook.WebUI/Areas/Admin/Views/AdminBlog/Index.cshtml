@model List<ResultAllBlogsWithAuthorDto>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="row">

	<div class="col-xl-12">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Blog Alanı</h4>
				<p class="card-subtitle mb-4">
					Blog alanında bulunan bilgileri aşağıdan düzenleyebilirsiniz.
				</p>
				<div class="table-responsive">
					<table class="table mb-0">
						<thead>
							<tr>
								<th>#</th>
								<th>Başlık</th>
								<th>Yazar Ad Soyad</th>
								<th>Kategori</th>
								<th>Tarih</th>
								<th>Kaldır</th>
								<th>Bloğu Aç</th>
								<th>Yorumlar</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								count++;
								<tr>
									<th>@count</th>
									<td>@item.title</td>
									<td>@item.authorName</td>
									<td>@item.categoryName</td>
									<td>@item.createdDate.ToShortDateString()</td>
									<td><a href="/Admin/AdminBlog/UpdateBlog/@item.blogID" class="btn btn-outline-warning">Kaldır</a></td>
									<td><a href="/Blog/BlogDetail/@item.blogID" class="btn btn-outline-info">Bloğu Aç</a></td>
									<td><a href="/Admin/AdminComment/Index/@item.blogID" class="btn btn-outline-primary">Yorumlar</a></td>
								</tr>
							}
						</tbody>
					</table>
				</div>

			</div>
			<!-- end Blogd-body-->
		</div>
		<!-- end Blogd -->

	</div>

</div>





