@model List<ResultAboutDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">

	<div class="col-xl-12">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Hakkımızda Alanı</h4>
				<p class="card-subtitle mb-4">
					Hakkımızda alanında bulunan bilgileri aşağıdan düzenleyebilirsiniz.
				</p>
				<div class="table-responsive">
					<table class="table mb-0">
						<thead>
							<tr>
								<th>#</th>
								<th>Başlık</th>
								<th>Açıklama</th>
								<th>Image Url</th>
								<th>Güncelle</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<th>#</th>
									<td>@item.title</td>
									<td>@item.description</td>
									<td>@item.imageUrl</td>
									<td><a href="/Admin/AdminAbout/UpdateAbout/@item.aboutID" class="btn btn-outline-warning">Güncelle</a></td>
								</tr>
							}
						</tbody>
					</table>
				</div>

			</div>
			<!-- end Aboutd-body-->
		</div>
		<!-- end Aboutd -->

	</div>

</div>


