@model CreatePricingDto

@{
    ViewData["Title"] = "CreatePricing";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="row">
	<div class="col-xl-12">
		<div class="card">
			<div class="card-body">

				<h4 class="card-title">Yeni Ödeme Türü Ekleme</h4>
				<p class="card-subtitle mb-4">Ödeme Türü ile ilgili temel bilgileri eksiksiz doldurmanız önemlidir. Veri girişlerinden sonra kaydet butonuna tıklayınız.</p>

				<form method="post">
					<div class="form-group">
						<label for="exampleInputPassword1">Ödeme Periyodu</label>
						<input type="text" class="form-control" asp-for="Name" id="exampleInputPassword1" placeholder="Ödeme Periyodu girişi yapınız">
					</div>
					<button type="submit" class="btn btn-primary waves-effect waves-light">Ödeme Türü Kaydet</button>
				</form>

			</div> <!-- end card-body-->
		</div>
	</div>
</div>



