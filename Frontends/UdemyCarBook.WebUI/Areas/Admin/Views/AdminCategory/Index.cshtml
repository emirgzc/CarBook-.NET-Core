@model List<ResultCategoryDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">

	<div class="col-xl-12">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Blog Kategori Alanı</h4>
				<p class="card-subtitle mb-4">
					Blog kategori alanında bulunan bilgileri aşağıdan düzenleyebilirsiniz.
				</p>
				<div class="table-responsive">
					<table class="table mb-0">
						<thead>
							<tr>
								<th>#</th>
								<th>Kategori Adı</th>
								<th>Sil</th>
								<th>Güncelle</th>
								<th>Kategorinin Blogları</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<th>#</th>
									<td>@item.Name</td>
									<td><a href="/Admin/AdminCategory/RemoveCategory/@item.CategoryID" class="btn btn-outline-danger">Sil</a></td>
									<td><a href="/Admin/AdminCategory/UpdateCategory/@item.CategoryID" class="btn btn-outline-warning">Güncelle</a></td>
									<td><a href="#" class="btn btn-outline-success">Kategorinin Blogları</a></td>
								</tr>
							}
						</tbody>
					</table>
					<a href="/Admin/AdminCategory/CreateCategory/" class="btn btn-outline-success">Yeni Kategori Ekle</a>
				</div>

			</div>
			<!-- end Categoryd-body-->
		</div>
		<!-- end Categoryd -->

	</div>

</div>

